<Window x:Class="YomeNotif.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YomeNotif"
        mc:Ignorable="d"
        Title="このアプリについて" Height="280" Width="420"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Image Source="sd_kumano_02.png" Width="180" Height="180" />
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Height="180" >
                <Image Source="ロゴ.png" Width="128" HorizontalAlignment="Left" Margin="0,8" />
                <TextBlock x:Name="Title" Text="嫁時報アプリ" FontSize="24" FontFamily="Meiryo UI" FontWeight="Bold" Padding="0,8" Foreground="#FF424242" />
                <TextBlock x:Name="Version" Text="version" FontFamily="Arial" Foreground="#FF616161"/>
                <Rectangle Height="75" />
                <TextBlock x:Name="Copyright" FontFamily="Arial" Text="CopyRight" FontSize="10" Foreground="#FF616161"/>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>
